<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointments Calendar</title>
    <style>
        .day {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 5px;
            display: inline-block;
            width: 100px;
            height: 100px;
            overflow: auto;
        }
        .appointment {
            cursor: pointer;
            background-color: #f0f0f0;
            margin: 2px;
            padding: 2px;
            display: block; /* Ensure the anchor tag fills the container */
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="column">
        <div id="navbar">

        </div>
        <div id="background-appointments">
            <div>
                <div id="current-date">
                    <p class="date">{{this.date}}</p>
                </div>
                <button id="expand-arrow">

                </button>
            </div>
            <div id="appointments-holder">
                <button>
                    <p>{{this.first_name}} {{this.last_name}}</p>
                    <p>{{this.phone_number}}</p>
                    <p>{{this.time}}</p>
                    <p>A.R.</p>
                </button>
            </div>
        </div>
    </div>
    
    <div id="calendar">
        {{#each appointments}}
            <div class="day">
                <div class="date">{{this.date}}</div>
                <!-- Update the div to an anchor tag -->
                <a href="/appointments/{{this.id}}" class="appointment">
                    {{this.time}} - {{this.first_name}} {{this.last_name}}
                </a>
            </div>
        {{/each}}
    </div>

</body>
</html>
